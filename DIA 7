#include<iostream>
#include<stdio.h>
using namespace std;

int main(){
	float x;
	int y;
	y=5;
	x=3.2;
	printf("numero 1=%f, numero 2=&d",x,y);//cout %d es un entero	
	
	return 0;
}


#include<iostream>
#include<stdio.h>
using namespace std;
int main(){
	int x;
	int *px;
	x=3;
	px=&x;
	printf("x=%d\n",x);
	printf("px= %x",px);
	
	return 0;
}


#include<iostream>
#include<stdio.h>
using namespace std;
int main(){
	char letra;
	letra='A';
	printf("letra=%c",letra);
  return 0;
}


#include<iostream>
#include<stdio.h>
using namespace std;
int main(){
	char letra;
	char *p_letra;
	letra='A';
	p_letra=&letra;
	printf("letra=%c\n",letra);
	printf("p_letra= %x",p_letra);
   return 0;
}
